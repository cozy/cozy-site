		color $clr-base

	&:hover
		background-color $clr-light

// Panels
//
.panel-title,
.panel-lead
	margin-left auto
	margin-right auto

.panel-title
	max-width 37.5rem // 600px
	margin-bottom ($spacer * 1.5) // ~75px
	+bp-max(md)
		margin-top $spacer-y
		margin-bottom $spacer-y

	&.withLead
		margin-bottom ($spacer / 4) // ~12

.panel-lead
	max-width 30rem  // 400px

// Contrasted CTA
//
	.standoutCTA
			background-color $clr-primary
			padding 3.5rem 3rem
			color white
			// margin-bottom 4.5rem
			+bp-max(md-hg)
				padding 1rem

			.container
				position relative

			.row
				align-items center

			+bp-max(lg)
				img
					margin-bottom 2rem

			+bp-max(md-hg)
				img
					width 100%

			h2
				margin-bottom 2rem
				text-align left
				color white
				font-size 3rem

				+bp-max(md-hg)
					font-size 1.5rem

			p
				margin-bottom 2rem
				font-size 1rem

	.standoutCTA-CTA
		display inline-flex
		flex-direction column
		align-items stretch

		.btn
			box-sizing border-box
			width 100%
			padding 1rem 2rem
			background-color white
			font-size 1.125rem
			color $clr-primary
			box-shadow: 0 8px 8px 0 rgba(50, 54, 63, 0.15), 0 4px 4px 0 rgba(50, 54, 63, 0.16);

			&:hover
			&:focus
				border-color $clr-lighter

			+bp-max(md)
				width 100%

			+bp-max(md-hg)
				font-size 1rem

	.standoutCTA-reassurance
		margin .5rem 0 0
		font-size .875rem

	.standout-panel
		img
			max-width 300px

// Hangs list
//
// 2 columns list with icons for presentation hangs on a list
.hangs
	padding $spacer 0 0

.hangsList
	@extend .list-unstyled
	display flex
	flex-wrap wrap
	font-family $ff-emphasis
	line-height $lh-sm

.hangsList-item
	display table
	margin-bottom ($spacer * 1.5)
	padding-left 0
	width 100%
	> div
		display table-cell
		vertical-align middle
	+bp-min(lg)
		padding-left 50px
		width 50%
	+bp-max(md)
		margin-bottom $spacer

	.hangsList-item-icon
		margin-right ($spacer / 2)

// Hangs list tryCozy
//
// 4 columns list with icons for presentation hangs on a list
.tryCozy
	.hangs
		padding $spacer 0 0

	.hangsList
		@extend .list-unstyled
		display flex
		flex-wrap wrap
		font-family $ff-emphasis
		line-height $lh-sm

	.hangsList-item
		display table
		margin-bottom ($spacer)
		padding-left 0
		width 100%
		> div
			display table-cell
			vertical-align middle
		+bp-min(lg)
			padding-left 50px
			width 25%
		+bp-max(md)
			margin-bottom $spacer
		.icon
			width 50px

		.hangsList-item-icon
			margin-right ($spacer / 2)

// Features list
//
// interactive features list
.features
	overflow hidden

.featuresList
	@extend .list-unstyled
	margin -($spacer) 0 0
	font-family $ff-emphasis

	&.light
		margin-top -($spacer)

	+bp-min(lg)
		margin-top 0

.featuresList-item
	position relative
	display inline-block
	margin-top $spacer
	width 49%
	vertical-align top
	min-height 4rem
	padding 0 .5rem

	&:last-child
		margin-bottom 0

	+bp-min(lg)
		display block
		margin $spacer 0
		margin-left $grid-gutter
		width auto
		vertical-align middle

		&:first-child
			margin-top 0

.featuresList-item-light
	position relative
	margin $spacer 0 0
	font-family $ff-emphasis
	line-height $lh-sm
	p
		margin-bottom 0 // reset default margin

.featuresList-item-link
	display block
	text-align center
	line-height $lh-sm
	color $clr-darkgrey !important
	padding .5rem
	+bp-min(lg)
		position absolute
		top 50%
		transform translateY(-50%)
		padding-left 4.063rem // 65px
		text-align left
		border-radius 4px
		+hover-state()
			background-color $clr-light
		&.active
			.featuresList-item-link-icon
				transform: translateY(-50%) scale(1)

.featuresList-item-link-icon-sm
	position relative
	display block
	margin 0 auto $spacer-x
	width 3rem
	height 3rem

	+bp-min(lg)
		display none

.featuresList-item-link-icon
	display none

	+bp-min(lg)
		display block
		position absolute
		top 50%
		left 1rem
		transform translateY(-50%)
		width 32px
		height 32px
		fill $clr-darkgrey
		transition background-color $transition-duration $transition-easing, fill $transition-duration $transition-easing, transform $transition-duration $transition-bounce

		img
			width 100%

.featuresList-item-link-icon-xl
	position relative
	display block
	margin 0 auto
	margin-bottom $spacer-x
	width 100px
	height 100px

.featuresList-item-link-icon-sm
.featuresList-item-link-icon
.featuresList-item-link-icon-xl
	img
	svg
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)

.featuresList-screenshots
	position relative
	min-height 416px

.featuresList-screenshotOutter
	position absolute
	top 0
	left 0
	right 0
	transform translateX(1000px)
	transition transform 1s cubic-bezier(.46,-0.47,.59,1.29)

	.featuresList-screenshot
		box-shadow 0px 0px 35px 0px rgba(0,0,0, 0.3)
		opacity 0
		transition opacity 1.5s $transition-easing

	&.active
		transform translateX(0)

		.featuresList-screenshot
			opacity 1


