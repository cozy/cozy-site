		color $clr-lighter
		background #000 url(../images/bkg-ungoogleyourlife@2x.jpg) no-repeat 50% 100% / cover
	.hangs
		color $clr-lighter
		background-color #000
	.features
		background-color #7588E0
	.featuresList-item-link
		+hover-state()
			.featuresList-item-link-icon
				fill: #7588E0
	.landingCTA
		background-color #F1F4FF
		.panel-lead
			color: $clr-primary

// Connect my data
