		margin-bottom 1rem

	.feature-app-icon
		width 4rem
		height 4rem

	.feature-app-name
		margin-top .5rem
		color $clr-darkbase
		font-weight bold
		text-transform uppercase

	.feature-app-store
		margin-top 4rem

		h2
			margin-bottom 2rem
			font-size 1.25rem

		a
			display inline-block
			margin 0 .5rem

			img
				width 10rem

	.panel-title
		line-height 1.3

