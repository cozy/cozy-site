// App main footer
//

.siteFooter
	padding-top $spacer
	padding-bottom $spacer
	font-family $ff-emphasis
	font-size $fs-sm
	background-color $footer-bkg

	.siteLogo
		max-width 110px
		max-height 40px

.siteFooter-hangTitle
	margin-bottom .5rem
	font-size $fs-h3
	line-height $headings-lh
	font-weight $fw-bold
	color $clr-darker
	+bp-max(lg)
		text-align center

.siteFooter-hangContent
	margin-bottom 1rem
	line-height 1.3
	font-size 1rem
	color $clr-primary
	+bp-max(lg)
		text-align center

.siteFooter-copy
	margin-top 4.375rem
	font-family $ff-common
	font-size ($fs-sm - .063rem)
	line-height 1.3
	color lighten($txt-clr-base, 60%)

.siteFooter-title
	font-size 1rem
	padding-bottom .5rem
	color $clr-darker
	text-align center

.siteFooter-list
	@extend .list-unstyled
	margin-bottom 0

	&.social
		display flex
		margin-bottom 1.5rem

		+bp-max(lg)
			justify-content center

		.siteFooter-list-item
			margin-bottom 0
			margin-right 1rem

			&:last-child
				margin-right 0

	&.language
		display flex
		align-items center
		margin-bottom 1rem

		+bp-max(lg)
			justify-content center

		li
			margin-bottom 0
			margin-right .5rem

			&:last-child
				margin-right 0

.siteFooter-list-item
	margin-bottom .625rem
	line-height 1

	&.bolder
		font-weight $fw-bold
		a
			color $clr-darkgrey
	&.muted
		a
			color $txt-muted
	&.bolder
	&.muted
		a
			+hover-state()
				color $clr-primary

	&.biggerGap
		margin-bottom .938rem

		margin-top 2em




// newsletter

.newsletterSection
	padding 1.5rem
	margin-bottom 2rem
	background-color rgba(0,0,0,.04)
	border-radius 4px

.siteFooter-listTitle.newsletter
		margin 1rem 0 .5rem

.subsribe-form
	display flex

.siteFooter-subscribeEmail
	width 30vw
	padding 0.25em 0.4em
	margin-right 0.125em
	border 0.0625rem solid lighten($clr-base, 67%)
	border-radius 3px

	&:focus
		border-color lighten($clr-base, 30%)

.siteFooter-subscribeButton
	padding 0.125rem 0.4rem
	background-color lighten($clr-base, 30%)
	border-color lighten($clr-base, 30%)

	&:hover
			background-color $clr-base
			border-color $clr-base

@media (max-width: 768px)
		#mc_embed_signup
				form
					width 80vw
					flex-direction column

		.siteFooter-subscribeEmail
			width 100%
			margin-bottom .5rem
