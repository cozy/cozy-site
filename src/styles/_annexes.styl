// Introduction
.contrast h1.introduction-title
	text-shadow: 2px 2px rgba(17, 18, 19, 0.69)

.contrast p.introduction-content-alt
	text-shadow: 1px 1px rgba(17, 18, 19, 1)

// Our vision
.ourVision
	margin-bottom $spacer


// Cozy team
.cozyTeam-content
	margin-bottom $spacer

	+bp-min(lg)
		text-align center

.cozyTeam-job
	margin 3rem auto 4rem
	max-width 60%
	border 1px solid $clr-lightgrey
	padding 2rem

.ourMembers
	background-color darken($clr-light, 2%)

.ourMembersList
	@extend .list-unstyled
	margin-top -($spacer-x)
	margin-bottom $spacer
	text-align center

.ourMembersList-item
	position relative
	display inline-block
	margin ($spacer-x * 2)
	max-width 10rem
	+bp-min(lg)
		margin $spacer-x ($spacer / 5) $spacer-x ($spacer / 5)
		transform scale(1)
		transition all $transition-duration $transition-bounce
		+hover-state()
			transform scale(0.95)

			.ourMembersList-item-member
				opacity 1

	&.rounded
		.ourMembersList-item-pic
			border-radius 50%
			overflow hidden

// Specifics size for smaller screens on community page
+bp-max(md)
	.ourMembers.community
		.ourMembersList-item
			max-width 75px

.ourMembersList-item-pic
	margin-bottom $spacer-x
	+bp-min(lg)
		margin-bottom 0

.ourMembersList-item-member
	font-family $ff-emphasis
	text-transform uppercase
	color $clr-darker
	+bp-min(lg)
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index 2
		color $clr-lighter
		background-color rgba(65,183,241, .7)
		border-radius 50%
		opacity 0
		transition opacity $transition-duration $transition-easing

.ourMembersList-item-member-inner
	+bp-min(lg)
		position absolute
		top 50%
		padding-right .625rem // 10px
		padding-left .625rem
		width 100%
		text-align center
		transform translateY(-50%)

.ourMembersList-item-member-job
	display block
	font-family $ff-common
	font-size $fs-sm
	text-transform none
	&::before
		content ""
		display block
		margin $spacer-x auto
		width ($spacer / 2)
		height 1px
		background-color $clr-darker
	+bp-min(lg)
		&::before
			background-color $clr-lighter


// Business model
.businessModel
	margin-bottom $spacer

	.no-margin
		margin-bottom 0

	.video
		margin-bottom ($spacer)

.businessModel-hangs
	margin-bottom ($spacer * 1.5)
	font-family $ff-emphasis
	font-size $fs-xl
	line-height $lh-sm
	font-weight $fw-bold
	font-style normal
	color darken(#06608D, 20%)
	text-align center

.businessModel-providers img
	width 4em
	height 4em
	margin-right 0.125em


// Timeline
.timeline
	@extend .list-unstyled
	position relative
	margin-bottom ($spacer * 1.5)
	padding-bottom ($spacer * 1.5)
	&::before
		content ""
		position absolute
		top 0
		bottom 0
		left 0
		margin-left -.063rem
		width .125rem
		background-color lighten($clr-base, 20%)
	&::after
		content ""
		position absolute
		bottom 0
		left 0
		margin-left -7px
		width 14px
		height 14px
		background $body-bkg url(../images/direction-arrow.svg) no-repeat 50% 50%
		transform rotate(90deg)
	+bp-min(lg)
		&::before
			left 50%
		&::after
			left 50%
			margin-left -7px



.timeline-item
	position relative
	margin-bottom $spacer

	&:first-child
		margin-left -5px
		margin-bottom $spacer
		padding-left 0
	&:last-child
		margin-bottom 0

	+bp-min(lg)
		&:nth-child(odd)
			padding-right 55%
			text-align right
		&:nth-child(even)
			padding-left 55%
		&:first-child
			padding 0
			text-align center
			margin-bottom $spacer
		&:last-child
			margin-bottom 0


.timeline-item-bullet
	position absolute
	top 50%
	left 0
	z-index 3
	transform translate(-50%, -50%)
	width 2.813rem  // 45px
	height 2.813rem
	text-align center
	line-height (2.813rem - .313rem)
	background-color $body-bkg
	border .125rem solid lighten($clr-base, 20%)
	border-radius 50%
	+bp-min(lg)
		left 50%


.timeline-item-container
	position relative
	z-index 2
	display inline-block
	padding $spacer-y
	text-align left
	background-color darken($clr-light, 5%)
	border-radius $border-radius
	+bp-min(lg)
		max-width 80%

	&.highlighted
		color: $clr-lighter
		background-color $clr-primary

		.timeline-item-date
			color darken($clr-primary, 30%)
		.timeline-item-content
			color $clr-lighter

	&.withCozyLogo
		padding-left (1.875rem + 3.375rem + 1.25rem) // default padding + logo size + margin
		background-image url(../images/cozy-smaller.svg);
		background-repeat no-repeat
		background-position 1.875rem 50%

	p:last-child
		margin-bottom 0

.timeline-item-date
	margin-bottom ($spacer-x * .5)
	text-align left
	font-family $ff-common
	font-size $fs-base
	font-weight $fw-bold
	color $clr-base
	text-transform none

.timeline-item-content
	color $clr-darker

