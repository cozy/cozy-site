// Button base styles
//
button
  padding: 0
  transition: $transition-property $transition-duration $transition-easing

.btn
  display: inline-block
  text-align: center
  vertical-align: middle
  font-family: $btn-ff
  text-transform: uppercase
  border: $border-width solid transparent
  touch-action: manipulation
  cursor: pointer
  user-select: none
  button-size($btn-pdg-y, $btn-pdg-x, $btn-fs, $btn-fw, $lh, $btn-border-radius)
  +bp-min(lg)
    white-space: nowrap

    & + .btn
      margin-left $spacer-z


// Button colors
//
.btn-primary
  button-colors($btn-primary-clr, $btn-primary-bkg, $btn-primary-border)

// Outlined button
.btn-outlined-primary
  button-outlined-colors($clr-primary, $btn-primary-border)

// Outlined button
.btn-outlined-primary-white
  button-outlined-colors($clr-lighter, $clr-lighter)
  
// Outlined button
.btn-outlined-primary-grey
  button-outlined-colors($clr-darkgrey, $clr-lightgrey)

// Button Sizes
//
.btn-sm
  button-size($btn-pdg-y-sm, $btn-pdg-x-sm, $btn-fs-sm, $btn-fw-sm, $lh-sm, $btn-border-radius-sm)

.btn-lg
  button-size($btn-pdg-y-lg, $btn-pdg-x-lg, $btn-fs-lg, $btn-fw-lg, $lh-lg, $btn-border-radius-lg)

.btn-xl
  button-size($btn-pdg-y-lg, $btn-pdg-x-lg, $btn-fs-xl, $btn-fw-xl, $lh-xl, $btn-border-radius-xl)


// Link buttons
//
// Make a button look and behave like a link
.btn-link
  font-weight: normal
  color: $link-clr
  border-radius: 0
  +hover-state()
    color: $link-hover-clr
    text-decoration: $link-hover-decoration
    background-color: transparent


// Block button
//
.btn-block
  display: block
  width: 100%

// Vertically space out multiple block buttons
.btn-block + .btn-block
  margin-top: 1rem


// Button animation
.btn-bounce
  transform scale(1)
  transition transform $transition-duration $transition-bounce
  +hover-state()
    transform scale(1.05)
