// Features list on homepage
//

.featuresList-item-home
	margin-bottom 3rem

	img
		height 8rem

	h3
		margin-bottom 1rem
		font-weight normal

	p
		line-height 1.25rem
		margin-bottom 1rem
		text-align left

// "Stand for" icons
//

.standFor,
.standFor-item
	display block
	// margin-bottom $spacer

.standFor-item
	+hover-state()
		.standFor-figure
			transform scale(1.125)

	img
		width 100%

.standFor-figure
	width 100%
	height 134px
	line-height 134px
	text-align center
	transition all $transition-duration $transition-bounce

.standFor-title
	margin 0 auto
	width 60%

.carousel
	width calc(100% - 4rem)
	margin 0 auto

.carousel-articleTitle
	position relative
	margin-bottom 1rem
	text-align center
	font-size 1.2rem

.carousel-articleImg
	position relative
	left -1.5rem
	top 0px
	width 32px
	height 32px

.slick-slide img
	display initial !important

.carousel-articleContent
	font-style italic
	font-size .9rem

	p
		margin-bottom 1rem

.carousel-articleDate
	font-size .8rem
	font-weight bold

.testimonies
	position relative
	background-color $clr-light
	padding 4rem 0

	+bp-min(lg-hg)
		margin-top 6rem

	+bp-min(lg)
		margin-top 1rem

.wave
	position absolute
	left 0
	right 0
	height 4rem

	+bp-min(lg-hg)
		height 10rem

	+bp-min(lg)
		height 14.5rem

.wave--top
	--primaryColor $clr-lighter
	--secondaryColor $clr-light
	top -.5rem

	+bp-min(lg-hg)
		top -7rem

	+bp-min(lg)
		top -8rem

.wave--bottom
	--primaryColor $clr-light
	--secondaryColor $clr-primary
	bottom -1px

	+bp-min(lg-hg)
		bottom -7rem

	+bp-min(lg)
		bottom -8rem

.testimonies-title
	position relative
	margin-bottom 1rem
	padding 0 1rem
	text-align center
	font-size 1.5rem

	+bp-min(lg-hg)
		font-size 2.5rem

.testimonies-subtitle
	position relative
	margin-bottom 3rem
	padding 0 1rem
	line-height 1.6
	color $clr-darkgrey
	text-align center
	font-size 1rem

	+bp-min(lg-hg)
		font-size 1.25rem

.testimonies-list
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	align-items stretch
	margin 0 auto

	+bp-min(lg-hg)
		justify-content space-between
		max-width 40rem

	+bp-min(lg)
		max-width 60rem

.testimonies-item
	display flex
	flex-direction column
	justify-content space-between
	position relative
	border: 1px solid $clr-lightgrey
	background-color $clr-lighter
	flex 0 1 18rem
	margin 0 2rem 1rem
	border-radius .25rem
	padding 1rem
	color $clr-darkgrey
	line-height 1.5

	+bp-min(lg-hg)
		margin 0 auto 3rem

		&:nth-child(odd)
			top 2.5rem

	+bp-min(lg)
		margin 0 1.5rem 4.5rem

		&:nth-child(-n+3)
			left -.75rem

		&:nth-child(n+4)
			left .75rem

		&:first-child
		&:nth-child(4)
			top 1.5rem
			margin-left 0

		&:last-child
		&:nth-child(3)
			top 1.5rem
			margin-right 0

		&:nth-child(2)
			top -1rem

		&:nth-child(5)
			top -2.5rem

.testimonies-author
	font-weight bold

.testimonies-medium
	span
	a:link
		display inline-flex
		align-items center

		&:before
			content ''
			display inline-block
			margin-right .25rem
			width 1rem
			height 1rem
			background url('../images/testimony/icon-mail.svg') left center / contain no-repeat

	a:link
		font-weight bold

		&.testimonies-twitter:before
			background-image url('../images/testimony/icon-twitter.svg')

		&.testimonies-mastodon:before
			background-image url('../images/testimony/icon-mastodon.svg')

		&.testimonies-playstore:before
			background-image url('../images/testimony/icon-playstore.svg')

		&.testimonies-apple:before
			background-image url('../images/testimony/icon-apple.svg')

		&.testimonies-comment:before
			background-image url('../images/testimony/icon-comment.svg')


.testimony
	margin-bottom 1.75rem
	justify-content center

.testimony-item
	display flex
	flex-direction column
	justify-content center
	margin-bottom 2rem
	border 1px solid $clr-lightgrey
	border-radius .5rem
	padding 2rem 1rem

.testimony-text
	font-size 1rem
	font-style italic
	line-height 1.2
	color $clr-darkgrey

	&::before
		content '« '

	&::after
		content ' »'

.testimony-desc
	margin-top 3rem

.testimony-icon
	font-size 1.875rem

.testimony-author
	font-weight bold

.reco
	h4
		padding 0 3rem

	+bp-max(md-lg)
		.reco-media
		.reco-values
			max-width 30rem
			margin 0 auto

	> div:not(:last-child)
		position relative

		&:after
			content ''
			position absolute
			top .6rem
			right -.6875rem
			height 7rem
			border-right 1px solid $clr-lightgrey


		+bp-max(md-lg)
			margin-bottom 2rem
			padding-bottom 2rem

			&:after
				top auto
				bottom 0
				right 0
				width 100%
				height 0
				border 0
				border-bottom 1px solid $clr-lightgrey


.laurels
	max-width 14.25rem
	min-height 4.5rem
	margin 0 auto
	background transparent url('../images/lauriers.svg') top center / contain no-repeat

	.laurels-info
		font-size .875rem

	.stars
		padding 1.15rem 0 .6rem

	.star
		width 1.75rem
		height 1.75rem

.reco-media
.reco-values
	flex-wrap nowrap

	.col
		flex 0 1 33%
		margin 0 .25rem 1rem
		line-height 1.3

	img
		display block
		margin 0 auto .5rem
		width 3rem
		height 3rem

		+bp-max(lg)
			width 2.5rem
			height 2.5rem

.values
	position relative
	z-index 1
	+bp-max(lg)
		img
			width 4.375rem
			height 5.9375rem

	+bp-max(md-lg)
		.values-col
			display flex
			flex-direction row
			margin-bottom 2rem
			padding 0 2.375rem
			text-align left

		h3
			text-align left
			margin-bottom 1rem

		p
			margin-bottom 1rem

		figure
			margin-right 2.375rem

		+bp-max(md-hg)
			.values-col
				padding 0 1.375rem

			figure
				margin-right 1.375rem

		+bp-max(md-hg)
			.values-col
				flex-direction column

			figure
				margin 0 auto 1rem

.usage-wrapper
	display flex
	flex-wrap wrap
	align-items center

.usage-reverse
	justify-content flex-end
	.usage-text
		order 1
		justify-content flex-start
		> div
			padding 5rem 6.25rem 5rem 10rem
			> div
				padding 5rem 6.25rem
		+bp-max(md-hg)
			> div
				padding 3rem

	+bp-max(lg)
		.usage-text
			order 0

.usage-text
.usage-image
	flex 1 0 50%
	+bp-max(lg)
		flex 1 1 100%

.usage-text
	max-width 50%
	display flex
	justify-content flex-end
	> div
		max-width 40rem
		padding 5rem 10rem 5rem 6.25rem
	+bp-max(lg)
		max-width 100%
		margin 0 auto
		> div
			padding 5rem 6.25rem
			max-width 40rem
	+bp-max(md-hg)
		flex-basis auto
		> div
			padding 3rem

	h3
		position relative
		text-align left
		font-size 2.5rem

		+bp-max(md-hg)
			font-size 1.5rem

		span
			position relative

		&:before
			content attr(data-step)
			position absolute
			bottom -2rem
			left -3rem
			font-size 18rem
			line-height .8
			color #f2f8ff

			+bp-max(md-hg)
				font-size 12rem

	a
		font-size 1.25rem

		img
			display inline-block
			margin-right 1rem
			width 2.5rem

.usage-image
	min-height 27.125rem
	max-width 54.8125rem
	+bp-max(md-hg)
		min-height 13rem

.usage-drive
	background url('../images/drive.svg') top left / cover no-repeat

.usage-bank
	background url('../images/banks.svg') top right / cover no-repeat

.usage-sync
	background url('../images/synchro.svg') top left / cover no-repeat

.usage-notes
	background url('../images/usage-notes.svg') top left / cover no-repeat

.usage-pass
	background url('../images/usage-pass.svg') top left / cover no-repeat

.usage-title
	position relative
	margin 0 auto
	width 58rem
	padding 0 2rem 4.6875rem
	font-size 3rem
	+bp-max(lg)
		width 100%
		padding-bottom 2rem
		font-size 1.5rem

	&:after
	&:before
		content ''
		position absolute
		bottom -2rem
		left 50%
		height 3rem
		width 3rem
		background url('../images/icon-arrow.svg') top left / contain no-repeat
		transform-origin center center
		transform rotate(90deg) translateY(50%)

	&:after
		opacity: .2
		bottom -3rem
