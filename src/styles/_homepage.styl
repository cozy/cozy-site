// Homepage content specifics styles
//

.homepage
	// height 94vh
	// min-height 800px
	// max-height 1050px
	// max-width 2000px
	margin auto

.is-homepage

	.introduction
		padding-top 20vh
		padding-bottom 24vh

		+bp-max(md)
			padding-top 12vh
			height 110vh
			text-align center

		+bp-max(sm)
			padding-top 12vh
			height 120vh
			text-align center


	.introduction-title
		text-align left

		+bp-max(md)
			text-align center

	.introduction-content
		text-align left
		font-weight normal
		font-size 1.1rem
		background rgba(255,255,255,.9)

		+bp-max(md)
			display none

	.introduction-reassurance
		font-size 0.875rem
		padding 0.75rem 0 0 0

		+bp-max(md)
			text-align center

