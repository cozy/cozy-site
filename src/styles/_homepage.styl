// Features list on homepage
//

.featuresList-item-home
	margin-bottom 3rem

	img
		height 8rem

	h3
		margin-bottom 1rem
		font-weight normal

	p
		line-height 1.25rem
		margin-bottom 1rem
		text-align left

// "Stand for" icons
//

.standFor,
.standFor-item
	display block
	// margin-bottom $spacer

.standFor-item
	+hover-state()
		.standFor-figure
			transform scale(1.125)

	img
		width 100%

.standFor-figure
	width 100%
	height 134px
	line-height 134px
	text-align center
	transition all $transition-duration $transition-bounce

.standFor-title
	margin 0 auto
	width 60%

.carousel
	width calc(100% - 4rem)
	margin 0 auto

.carousel-articleTitle
	position relative
	margin-bottom 1rem
	text-align left
	font-size 1.2rem

.carousel-articleTitle a:before
	content ''
	position absolute
	left -2.5rem
	top 2px
	width 32px
	height 32px
	background-size contain

.press-adn:before
	background url('../images/press/adn.png')
.press-bfm:before
	background url('../images/press/bfm.png')
.press-canalplus:before
	background url('../images/press/canal-plus-icon-152x152.png')
.press-echos:before
	background url('../images/press/lesechos.ico')
.press-franceinfo:before
	background url('../images/press/franceinfo.ico')
.press-franceinter:before
	background url('../images/press/franceinter.png')
.press-jdn:before
	background url('../images/press/jdn.ico')
.press-lefigaro:before
	background url('../images/press/lefigaro.png')
.press-lepoint:before
	background url('../images/press/lepoint.ico')
.press-lesechos:before
	background url('../images/press/lesechos.jpg')
.press-numerama:before
	background url('../images/press/numerama.ico')
.press-nextinpact:before
	background url('../images/press/nextinpact.ico')
.press-techcrunch:before
	background url('../images/press/techcrunch.ico')
.press-usbeketrica:before
	background url('../images/press/usbeketrica.ico')
.press-usinedigitale:before
	background url('../images/press/usinedigitale.ico')
.press-wired:before
	background url('../images/press/wired.ico')


.carousel-articleContent
	font-style italic
	font-size .9rem

	p
		margin-bottom 1rem

.carousel-articleDate
	font-size .8rem
	font-weight bold

.testimony
	margin-bottom 1.75rem
	justify-content center

.testimony-item
	display flex
	flex-direction column
	justify-content center
	margin-bottom 2rem
	border 1px solid $clr-lightgrey
	border-radius .5rem
	padding 2rem 1rem

.testimony-text
	font-size 1rem
	font-style italic
	line-height 1.2
	color $clr-darkgrey

	&::before
		content '« '

	&::after
		content ' »'

.testimony-desc
	margin-top 3rem

.testimony-icon
	font-size 1.875rem

.testimony-author
	font-weight bold

.reco
	h4
		padding 0 3rem
	
	+bp-max(md-lg)
		.reco-media
		.reco-values
			max-width 30rem
			margin 0 auto
		
	> div:not(:last-child)
		position relative

		&:after
			content ''
			position absolute
			top .6rem
			right -.6875rem
			height 7rem
			border-right 1px solid $clr-lightgrey
			

		+bp-max(md-lg)
			margin-bottom 2rem
			padding-bottom 2rem
			
			&:after
				top auto
				bottom 0
				right 0
				width 100%
				height 0
				border 0
				border-bottom 1px solid $clr-lightgrey
				

.laurels
	max-width 14.25rem
	min-height 4.5rem
	margin 0 auto
	background transparent url('../images/lauriers.svg') top center / contain no-repeat

	.laurels-info
		font-size .875rem

	.stars
		padding 1.15rem 0 .6rem

	.star
		width 1.75rem
		height 1.75rem

.reco-media
.reco-values
	flex-wrap nowrap

	.col
		flex 0 1 33%
		margin 0 .25rem 1rem
		line-height 1.3

	img
		display block
		margin 0 auto .5rem
		width 3rem
		height 3rem

		+bp-max(lg)
			width 2.5rem
			height 2.5rem

.values
	+bp-max(lg)
		img
			width 4.375rem
			height 5.9375rem

	+bp-max(md-lg)
		.values-col
			display flex
			flex-direction row
			margin-bottom 2rem
			padding 0 2.375rem
			text-align left

		h3
			text-align left
			margin-bottom 1rem

		p
			margin-bottom 1rem

		figure
			margin-right 2.375rem
		
		+bp-max(md-hg)
			.values-col
				padding 0 1.375rem
			
			figure
				margin-right 1.375rem
		
		+bp-max(md-hg)
			.values-col
				flex-direction column
			
			figure
				margin 0 auto 1rem

.usage-wrapper
	display flex
	flex-wrap wrap
	align-items center
	justify-content center

.usage-reverse
	.usage-text
		order 1
	
	+bp-max(lg)
		.usage-text
			order 0

.usage-text
.usage-image
	flex 1 0 50%
	+bp-max(lg)
		flex 1 1 100%

.usage-text
	max-width 50%
	display flex
	justify-content flex-end
	> div
		max-width 40rem
		padding 5rem 10rem 5rem 6.25rem
	+bp-max(lg)
		max-width 100%
		margin 0 auto
		> div
			padding 5rem 6.25rem
			max-width 40rem
	+bp-max(md-hg)
		flex-basis auto
		> div
			padding 3rem
	
	h3
		position relative
		text-align left
		font-size 2.5rem
		
		+bp-max(md-hg)
			font-size 1.5rem
		
		span
			position relative
		
		&:before
			content attr(data-step)
			position absolute
			bottom -2rem
			left -3rem
			font-size 18rem
			line-height .8
			color #f2f8ff
			
			+bp-max(md-hg)
				font-size 12rem
		
	a
		font-size 1.25rem
		
		img
			display inline-block
			margin-right 1rem
			width 2.5rem

.usage-reverse .usage-text
	justify-content flex-start

.usage-image
	min-height 33.125rem
	max-width 50%
	+bp-max(lg)
		max-width 100%
	+bp-max(md-hg)
		min-height 13rem

.usage-drive
	background url('../images/drive.png') top left / cover no-repeat
	
.usage-bank
	background url('../images/banks.png') top right / cover no-repeat
	
.usage-sync
	background url('../images/synchro.png') top left / cover no-repeat

.usage-title
	position relative
	margin 0 auto
	width 58rem
	padding 0 2rem 4.6875rem
	font-size 3rem
	+bp-max(lg)
		width 100%
		padding-bottom 2rem
		font-size 1.5rem
	
	&:after
	&:before
		content ''
		position absolute
		bottom -2rem
		left 50%
		height 3rem
		width 3rem
		background url('../images/icon-arrow.svg') top left / contain no-repeat
		transform-origin center center
		transform rotate(90deg) translateY(50%)
	
	&:after
		opacity: .2
		bottom -3rem
