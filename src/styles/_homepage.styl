// Features list on homepage
//

.featuresList-item-home
	margin-bottom 3rem

	img
		width 5rem

	h3
		margin-bottom .5rem

	p
		line-height 1.25rem
		margin-bottom .5rem

// "Stand for" icons
//

.standFor,
.standFor-item
	display block
	// margin-bottom $spacer

.standFor-item
	+hover-state()
		.standFor-figure
			transform scale(1.125)

	img
		width 100%

.standFor-figure
	width 100%
	height 134px
	line-height 134px
	text-align center
	transition all $transition-duration $transition-bounce

.standFor-title
	margin 0 auto
	width 60%
