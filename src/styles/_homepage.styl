	.stores
		position absolute
		bottom .5rem

	.btn-store
		display inline-block
		width 1.5rem
		height 1.5rem
		margin 0 .5rem

		img
			width 100%
			height 100%
			opacity .2
			transition opacity 500ms ease-out

			&:hover
			&:focus
				opacity 1

