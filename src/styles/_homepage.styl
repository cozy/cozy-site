	margin auto

.is-homepage

	.introduction
		padding-top 20vh
		padding-bottom 24vh

		+bp-max(md)
			padding-top 12vh
			height 110vh
			text-align center

		+bp-max(sm)
			padding-top 12vh
			height 120vh
			text-align center


	.introduction-title
		text-align left

		+bp-max(md)
			text-align center

	.introduction-content
		position relative
		text-align left
		font-weight normal
		font-size 1.1rem
		background rgba(255,255,255,.9)
		height 3.75rem
		overflow hidden
		
		&:before
		&:after
			position absolute
			z-index 1
			display block
			content ''
			height 1rem
			width 100%
		
		&:before
			top 0
			left 0
			background-image linear-gradient(to bottom, rgba(255,255,255,1) 1%,rgba(255,255,255,1) 40%,rgba(255,255,255,0) 100%);
		
		&:after
			bottom 0
			left 0
			background-image linear-gradient(to top, rgba(255,255,255,1) 1%,rgba(255,255,255,1) 40%,rgba(255,255,255,0) 100%);

	.introduction-slider
		position relative
		animation slide 19s ease infinite

		span
			box-sizing border-box
			display block
			height 3.75rem
			padding 1rem 0

		+bp-max(md)
			display none

	.introduction-reassurance
		font-size 0.875rem
		padding 0.75rem 0 0 0

		+bp-max(md)
			text-align center

