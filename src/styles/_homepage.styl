	// max-height 1050px
	// max-width 2000px
	margin auto

.panel
	padding 4rem 0

.is-homepage

	.grey-background
		background-color $clr-light

	.introduction
		padding-top 12vh
		padding-bottom 8vh

		+bp-max(md)
			padding-top 4vh
			height 110vh

	.introduction-title
		text-align left

	.introduction-content
		text-align left
		font-weight normal
		font-size 1.1rem
		background rgba(255,255,255,.9)

		+bp-max(md)
			display none

