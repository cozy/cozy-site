	margin auto

.is-homepage

	.introduction
		display flex
		align-items stretch
		padding-top 6rem
		padding-bottom 2rem
		background-color $clr-primary
		color $clr-lighter
		min-height 43.75rem

		+bp-max(lg)
			text-align center
			box-sizing content-box
			padding-bottom 0

		+bp-max(md)
			padding-top 12vh
			text-align center

		+bp-max(sm)
			padding-top 12vh
			padding-bottom 0
			text-align center

	.introduction-container
		position relative
		display flex
		align-items center

		+bp-max(lg)
			flex-direction column

	.introduction-desc
		box-sizing border-box
		width 50%
		padding 0 .625rem

		+bp-max(lg)
			width 100%

	.introduction-title
		text-align left
		color $clr-lighter
		font-size 3.5rem

		+bp-max(lg)
			text-align center
			font-size 2.5rem

	.introduction-content
		text-align left
		font-weight normal
		font-size 1.1rem
		margin-bottom 1.5rem

		+bp-max(md)
			display none

	.introduction-canvas
		position absolute
		right 0
		left 45%
		top -8rem
		bottom -8rem
		width 55%
		overflow hidden


		+bp-max(lg)
			position static
			width 100%
			transform translateY(10%)
			margin-top -4rem

			> *
				margin 0 auto

	.canvas-wrapper
		+bp-min(lg)
			position relative
			top 50%
			transform translateY(-50%)

